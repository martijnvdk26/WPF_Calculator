<UserControl x:Class="WPF_Calculator.Geschiedenis"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Calculator"
             mc:Ignorable="d" 
             d:DesignHeight="275" d:DesignWidth="700" Background="LightBlue">
    <StackPanel VerticalAlignment="Top">
        <DataGrid Margin="25" ItemsSource="{Binding}" Name="dtGrid" MaxHeight="150  "></DataGrid>
        <Button Width="100" Click="Button_Click">Clear history</Button>
    </StackPanel>
</UserControl>
