<Window x:Class="WPF_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Calculator"
        mc:Ignorable="d"
        Title="WPF Calculator" Height="400" Width="350"        >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="3"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Menu Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
            <MenuItem Header="Rekenmachine">
                <MenuItem Header="Standard"/>
                <MenuItem Header="Metrics"/>
                <MenuItem Header="Degrees"/>
                <MenuItem Header="Decimal"/>
                <MenuItem Header="Exchange"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Application"/>
            </MenuItem>
        </Menu>
        <TextBox Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" AcceptsReturn="True" />
        <Button Content="7" HorizontalAlignment="Left" Margin="25,102,0,0" Grid.Row="1" VerticalAlignment="Top" Width="46" Height="31" FontSize="18" Click="Button_7"/>
        <TextBox Height="40" TextWrapping="Wrap" VerticalAlignment="Top" Margin="25,20,0,0" HorizontalAlignment="Left" Width="300" FontSize="20" Background="Black" Name="tb" Text=""></TextBox>
        <Button Content="8" HorizontalAlignment="Left" Margin="150,102,0,0" Grid.Row="1" VerticalAlignment="Top" Width="46" Height="31" FontSize="18" Click="Button_8"/>
        <Button Content="9" HorizontalAlignment="Left" Margin="275,102,0,0" Grid.Row="1" VerticalAlignment="Top" Width="46" Height="31" FontSize="18" Click="Button_9"/>
    </Grid>
    

</Window>
